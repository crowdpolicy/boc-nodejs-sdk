<div style="width: 100%; text-align: center">
    <h1>BoC SDK test app</h1>

    <br>
    <br>

    <% if(boc_api.subStatus.status == "ACTV" && boc_api.subStatus.selectedAccounts.length > 0){ %>

    <button onclick="location.href = '/accounts'">Get available accounts</button>
    
    <br>
    <br>

    <hr>

    <br>

    Account ID: <input type="text" id="accountId">
    <br> 
    <button onclick="location.href = '/accounts/' + document.getElementById('accountId').value">Get account details</button>
    <button onclick="location.href = '/accounts/' + document.getElementById('accountId').value + '/balances'">Get account balnces</button>
    <button onclick="location.href = '/accounts/' + document.getElementById('accountId').value + '/statements'">Get account statements</button>

    <br> 
    <br>
    <hr>
    <br>

    Debtor's accountId: <input type="text" id="debtorIban">
    <br>
    Creditor's accountId: <input type="text" id="creditorIban">
    <br>
    Amount: <input type="text" id="amount">
    <br>
    <button onclick="location.href = '/pay?debtorIban=' + document.getElementById('debtorIban').value + '&creditorIban=' + document.getElementById('creditorIban').value + '&amount=' + document.getElementById('amount').value">Pay</button>

    <br> 
    <br>
    <hr>
    <br>

    Payment Id: <input type="text" id="paymentId">
    <br>
    <button onclick="location.href = '/payment/' + document.getElementById('paymentId').value">Get payment information</button>

    <br> 
    <br>
    <hr>



    <% } else { %>

    <button onclick="location.href = '<%= boc_api.get_login_url() %>'">Connect to your BOC Account</button>

    <% } %>
</div>